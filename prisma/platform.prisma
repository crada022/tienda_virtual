generator client {
  provider = "prisma-client-js"
  output   = "../src/prisma/platform"
}

datasource db {
  provider = "postgresql"
  url      = env("PLATFORM_DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(SELLER)
  createdAt DateTime @default(now())

  stores Store[]
}

model Store {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  domain    String?  @unique
  dbName    String   @unique

  createdAt DateTime @default(now())
  active    Boolean  @default(true)

  address     String?
  description String?
  email       String?
  phone       String?

  bannerUrl  String?
  colorTheme Json?
  layoutType String?
  style      String?

  ownerId Int
  owner   User @relation(fields: [ownerId], references: [id])

  aiTemplates AITemplate[]
}


model AITemplate {
  id        Int      @id @default(autoincrement())
  prompt    String
  response  Json
  createdAt DateTime @default(now())
  storeId   String

  store Store @relation(fields: [storeId], references: [id])
}

enum Role {
  SELLER
  ADMIN
}
